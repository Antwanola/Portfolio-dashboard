
<form action="/admin/category/{{category._id}}?_method=PUT" method="post" >
    <div class="form-group">
        <label for="category">Category</label>
        <input name="category" type="text" class="form-control" id="category" placeholder="Enter category" value="{{category.category}}">
    </div>


    <div class="form-group">
        <label for="message">Decription </label>
        <textarea required  name="message" cols="30" rows="10" class="form-control" id="message" placeholder="message">{{category.message}}</textarea>
    </div>


    <button type="submit" class="btn btn-primary">Update Category</button>


</form>
