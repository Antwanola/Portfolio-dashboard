    <h1>Create Blog</h1>

<div>
<form action="/admin/create-blog" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="title">Title</label>
        <input name="title" type="text" class="form-control" id="title" placeholder="Enter title" >
    </div>

    <div class="form-group">
        <label for="file">File Upload</label>
        <input type="file" name="file" class="form-control"  >
    </div>

    <div class="form-group">
        <label for="category">Category</label>
        <select name="category" id="category" class="form-control">


            {{#each categories}}

            <option value="{{_id}}">{{category}}</option>

            {{/each}}

        </select>
    </div>


    <div class="form-group">
        <label for="status">Status</label>
        <select name="status" id="status" class="form-control">
            <option value="public">Public</option>
            <option value="private">Private</option>
            <option value="draft">Draft</option>
        </select>
    </div>



    <div class="form-check">
        <label for="allowComment" class="form-check-label">
        <input name="allowComment" type="checkbox" class="form-check-input" id="allowComment">
            Allow Comments
        </label>
    </div>

    <div class="form-group">
        <label for="body">Decription </label>
        <textarea  name="description" cols="30" rows="10" class="form-control" id="description" placeholder="Enter Description"></textarea>
    </div>

  <div class="form-group">
  <button type="submit" class="btn btn-primary">Create Blog</button>


  </div>

  

</form>
</div>