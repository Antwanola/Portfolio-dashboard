<h1>Projects</h1>



 <!-- Example DataTables Card-->
      <div class="card mb-3">
        <div class="card-header">
          <i class="fa fa-table"></i> Data Table Example</div>
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            
              <thead>
       
                <tr>
                  <th>ID</th>
                  <th>IMAGE</th>
                  <th>STATUS</th>
                  <th>TITLE</th>
                  <th>Comments</th>
                  <th>DATE</th>
                  <th>DESCRIPTION</th>
                </tr>
              </thead>
              <tfoot>
                <tr>
                <th>ID</th>
                  <th>IMAGE</th>
                  <th>STATUS</th>
                  <th>TITLE</th>
                  <th>Comments</th>
                  <th>DATE</th>
                  <th>DESCRIPTION</th>
                </tr>
              </tfoot>
              <tbody>
                {{#each projects}}
                <tr>
                  <td>{{_id}}</td>
                  <td><img src="/uploads/{{file}}" height="50" ></td>
                  <td>{{status}}</td>
                  <td>{{title}}</td>
                  <td>{{allowComment}}</td>
                  <td>{{date}}</td>
                  <td>{{description}}</td>
                  <td><a href="/admin/project/edit/{{id}}" class="btn btn-info">Edit</a></td>
                  <td> 
                    <form action="/admin/project/{{id}}?_method=DELETE" method="delete">

                    <button type="submit" class="btn btn-danger">DELETE</button>
                </form></td>
                </tr>
                {{/each}}
              </tbody>
            </table>
          </div>
        </div>
        <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
      </div>
    </div>